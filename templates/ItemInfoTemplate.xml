<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Font name="ECFFontSmall" font="Interface\AddOns\EnhancedCharacterFrame\fonts\Oswald-Regular.otf" virtual="true">
        <FontHeight>
            <AbsValue val="10"/>
        </FontHeight>
    </Font>

    <Frame name="ECF_ItemInfoLeftTemplate" toplevel="true" enableMouse="true" virtual="true">
     <Size>
       <AbsDimension x="56" y="37"/>
     </Size>
     <Layers>
        <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
                <Color r="0.0" g="0.0" b="0.0" a="0.8"/>
                <Gradient orientation="HORIZONTAL" parentKey="gradient">
                    <MinColor r="0.0" g="0.0" b="0.0" a="0.8"/>
                    <MaxColor r="0.0" g="0.0" b="0.0" a="0.0"/>
                </Gradient>
            </Texture>
        </Layer>
        <Layer level="OVERLAY">
            <FontString parentKey="text" text="ITEM_INFO_TEXT" inherits="ECFFontSmall">
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer>
     </Layers>
   </Frame>

   <Frame name="ECF_ItemInfoRightTemplate" toplevel="true" enableMouse="true" virtual="true">
     <Size>
       <AbsDimension x="56" y="37"/>
     </Size>
     <Layers>
        <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
                <Color r="0.0" g="0.0" b="0.0" a="0.8"/>
                <Gradient orientation="HORIZONTAL" parentKey="gradient">
                    <MinColor r="0.0" g="0.0" b="0.0" a="0.0"/>                                    
                    <MaxColor r="0.0" g="0.0" b="0.0" a="0.8"/>
                </Gradient>
            </Texture>
        </Layer>
        <Layer level="OVERLAY">
            <FontString parentKey="text" text="ITEM_INFO_TEXT" inherits="ECFFontSmall">
                <Anchors>
                    <Anchor point="RIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer>
     </Layers>
   </Frame>

   <Frame name="ECF_ItemInfoWeaponTemplate" toplevel="true" enableMouse="true" virtual="true">
     <Size>
       <AbsDimension x="56" y="37"/>
     </Size>
     <Layers>
        <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
                <Color r="0.0" g="0.0" b="0.0" a="0.8"/>
                <Gradient orientation="VERTICAL" parentKey="gradient">
                    <MinColor r="0.0" g="0.0" b="0.0" a="0.8"/>                
                    <MaxColor r="0.0" g="0.0" b="0.0" a="0.0"/>                
                </Gradient>
            </Texture>
        </Layer>
        <Layer level="OVERLAY">
            <FontString parentKey="text" text="ITEM_INFO_TEXT" inherits="ECFFontSmall">
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer>
     </Layers>
   </Frame>
</Ui>